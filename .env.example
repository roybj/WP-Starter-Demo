# ============================================================================
# WordPress WP Starter - Environment Configuration Template
# ============================================================================
# Copy this file to .env and update values for your local environment
# DO NOT commit .env to version control (see .gitignore)
#
# For Docker setup, all services communicate using container names (e.g., mysql, redis)
# ============================================================================

# ============================================================================
# WORDPRESS ENVIRONMENT
# ============================================================================
# Options: development, staging, production
WP_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For Docker: Use 'mysql' as DB_HOST (container name)
# For Local: Use 'localhost' or '127.0.0.1'
DB_NAME=wordpress_dev
DB_USER=wp_user
DB_PASSWORD=wp_secure_password
DB_HOST=mysql
TABLE_PREFIX=wp_
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# ============================================================================
# WORDPRESS SITE URLs
# ============================================================================
# WP_HOME: Site URL
# WP_SITEURL: WordPress admin URL (typically WP_HOME/wp)
WP_HOME=http://localhost:8080
WP_SITEURL=http://localhost:8080/wp

# ============================================================================
# DEBUG & LOGGING
# ============================================================================
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=true
SCRIPT_DEBUG=true

# ============================================================================
# FILE MODIFICATION RESTRICTIONS
# ============================================================================
# Development: Allow WP-Admin plugin/theme installation for testing
# Production: Set to 'true' to force Composer-only management
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=false

# ============================================================================
# AUTOMATIC UPDATES
# ============================================================================
# Development: Disable auto-updates to avoid surprises
# Production: Configure based on your update strategy
AUTOMATIC_UPDATER_DISABLED=true

# ============================================================================
# WORDPRESS PERFORMANCE
# ============================================================================
# Number of post revisions to keep (0 = unlimited, false = disable)
WP_POST_REVISIONS=5

# PHP Memory Limit for WordPress
WP_MEMORY_LIMIT=512M

# ============================================================================
# REDIS CACHING (Docker)
# ============================================================================
# For Docker: Use 'redis' as WP_REDIS_HOST (container name)
# For Local: Use 'localhost' or '127.0.0.1'
WP_REDIS_HOST=redis
WP_REDIS_PORT=6379
WP_REDIS_DATABASE=0
WP_REDIS_PREFIX=wp_cache_
WP_CACHE=true

# ============================================================================
# SECURITY KEYS & SALTS
# ============================================================================
# IMPORTANT: Generate new keys for production!
# Visit: https://api.wordpress.org/secret-key/1.1/salt/
# DO NOT use these development values in production!
#
AUTH_KEY='dev-auth-key-replace-with-unique-value'
SECURE_AUTH_KEY='dev-secure-auth-key-replace-with-unique-value'
LOGGED_IN_KEY='dev-logged-in-key-replace-with-unique-value'
LOGGED_IN_SALT='dev-logged-in-salt-replace-with-unique-value'
NONCE_KEY='dev-nonce-key-replace-with-unique-value'
NONCE_SALT='dev-nonce-salt-replace-with-unique-value'
AUTH_SALT='dev-auth-salt-replace-with-unique-value'
SECURE_AUTH_SALT='dev-secure-auth-salt-replace-with-unique-value'

# ============================================================================
# EMAIL CONFIGURATION (SMTP via MailHog in Docker)
# ============================================================================
# For Docker development: MailHog intercepts all emails
# For Local development: Configure your SMTP server
# For Production: Use your production mail service
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# ADDITIONAL WORDPRESS CONSTANTS
# ============================================================================
# Set to 'true' to enable WordPress admin display of errors
# Useful for development, disabled for security in production
WP_CONTENT_DIR=wp-content

# ============================================================================
# DOCKER SPECIFIC SETTINGS
# ============================================================================
# These are primarily used by docker-compose.yml
# Usually don't need modification for development
COMPOSE_PROJECT_NAME=bb-wp-template
MYSQL_ROOT_PASSWORD=root_secure_password
REDIS_PASSWORD=
