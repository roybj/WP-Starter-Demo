# ============================================================================
# WordPress WP Starter - Production Environment Configuration
# ============================================================================
# This is an example of production-ready configuration
# Copy to .env for production deployment
# IMPORTANT: Update all security keys and sensitive values!
# ============================================================================

# ============================================================================
# WORDPRESS ENVIRONMENT
# ============================================================================
# Production environment restricts modifications
WP_ENV=production

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# For Production: Use proper database credentials
# For RDS/Managed DB: Use endpoint instead of localhost
DB_NAME=your_production_db_name
DB_USER=your_db_username
DB_PASSWORD=your_secure_database_password
DB_HOST=your-production-db-host
TABLE_PREFIX=wp_
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# ============================================================================
# WORDPRESS SITE URLs
# ============================================================================
WP_HOME=https://yourdomain.com
WP_SITEURL=https://yourdomain.com/wp

# ============================================================================
# DEBUG & LOGGING
# ============================================================================
# PRODUCTION: Disable debug output to prevent information leakage
WP_DEBUG=false
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=false

# ============================================================================
# FILE MODIFICATION RESTRICTIONS
# ============================================================================
# PRODUCTION: Enforce Composer-only plugin/theme management
# This prevents unauthorized modifications via WP-Admin
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=true

# ============================================================================
# AUTOMATIC UPDATES
# ============================================================================
# PRODUCTION: Disable automatic updates - use manual controlled updates
AUTOMATIC_UPDATER_DISABLED=true

# ============================================================================
# WORDPRESS PERFORMANCE
# ============================================================================
WP_POST_REVISIONS=3
WP_MEMORY_LIMIT=256M

# ============================================================================
# REDIS CACHING (Production)
# ============================================================================
# Use managed Redis service or dedicated Redis instance
WP_REDIS_HOST=your-redis-host
WP_REDIS_PORT=6379
WP_REDIS_DATABASE=0
WP_REDIS_PREFIX=wp_cache_
WP_REDIS_PASSWORD=your_redis_password
WP_CACHE=true

# ============================================================================
# SECURITY KEYS & SALTS
# ============================================================================
# CRITICAL: Generate new unique keys from:
# https://api.wordpress.org/secret-key/1.1/salt/
#
# Example (DO NOT use these!):
AUTH_KEY='put your unique phrase here'
SECURE_AUTH_KEY='put your unique phrase here'
LOGGED_IN_KEY='put your unique phrase here'
LOGGED_IN_SALT='put your unique phrase here'
NONCE_KEY='put your unique phrase here'
NONCE_SALT='put your unique phrase here'
AUTH_SALT='put your unique phrase here'
SECURE_AUTH_SALT='put your unique phrase here'

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Use production email service (AWS SES, SendGrid, etc.)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# ============================================================================
# ADDITIONAL SECURITY
# ============================================================================
# Force HTTPS
WP_CONTENT_DIR=wp-content

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Log all WordPress errors to a file
WP_DEBUG_LOG=true

# ============================================================================
# PRODUCTION DOCKER SETTINGS
# ============================================================================
COMPOSE_PROJECT_NAME=wp-production
MYSQL_ROOT_PASSWORD=your_secure_root_password
REDIS_PASSWORD=your_redis_password
